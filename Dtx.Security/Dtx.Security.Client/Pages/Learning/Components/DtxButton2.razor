<button type="button" class="btn btn-primary" @onclick="(e) => ButtonClicked(e)">@(Caption)</button>

@code {

	[Parameter]
	public string Caption { get; set; } = "Submit";

	[Parameter]
	public EventCallback<MouseEventArgs> OnClick { get; set; }

	private void ButtonClicked(MouseEventArgs e)
	{
		OnClick.InvokeAsync(e);
	}

}
